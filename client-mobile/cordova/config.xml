        <icon src="resources/android/drawable_xxhdpi/96x96.png" width="96" height="96" density="xxhdpi" />
        <icon src="resources/android/drawable_xxhdpi/144x144.png" width="144" height="144" density="xxhdpi" />

        <icon src="resources/android/drawable_xxxhdpi/64x64.png" width="64" height="64" density="xxxhdpi" />
        <icon src="resources/android/drawable_xxxhdpi/96x96.png" width="96" height="96" density="xxxhdpi" />
        <icon src="resources/android/drawable_xxxhdpi/128x128.png" width="128" height="128" density="xxxhdpi" />
        <icon src="resources/android/drawable_xxxhdpi/192x192.png" width="192" height="192" density="xxxhdpi" />

        <!-- Splash Screens -->
        <splash src="resources/android/drawable_land_hdpi/screen.png" density="land-hdpi" />
        <splash src="resources/android/drawable_land_ldpi/screen.png" density="land-ldpi" />
        <splash src="resources/android/drawable_land_mdpi/screen.png" density="land-mdpi" />
        <splash src="resources/android/drawable_land_xhdpi/screen.png" density="land-xhdpi" />

        <splash src="resources/android/drawable_port_hdpi/screen.png" density="port-hdpi" />
        <splash src="resources/android/drawable_port_ldpi/screen.png" density="port-ldpi" />
        <splash src="resources/android/drawable_port_mdpi/screen.png" density="port-mdpi" />
        <splash src="resources/android/drawable_port_xhdpi/screen.png" density="port-xhdpi" />
    </platform>
</widget>
